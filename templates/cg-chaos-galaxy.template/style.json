{
	"name": "Chaos Galaxy",
	"desc": "Custom card template for Chaos Galaxy",
	"preview-card": "cg-preview.jpg",
	"stylesheet": "style.css",
	"fonts": [
		"Shaimus.ttf",
		"Shaimus-Light.ttf"
	],
	"card": {
		"height": "562.5",
		"width": "412.5",
		"name_field": "name",
		"display_fields": [
			"type"
		]
	},
	"automation": {
		"insert": {
			"sindian text": "<span class=\"shaimus sindian-rules-text\">sindian text</span><span> ",
			"gaios text": "<span class=\"shaimus gaios-rules-text\">gaios text</span><span> ",
			"baro text": "<span class=\"shaimus baro-rules-text\">baro text</span><span> ",
			"palicium text": "<span class=\"shaimus palicium-rules-text\">palicium text</span><span> ",
			"sheos text": "<span class=\"shaimus sheos-rules-text\">sheos text</span><span> ",
			"rokah text": "<span class=\"shaimus rokah-rules-text\">rokah text</span><span> ",
			"sindell text": "<span class=\"shaimus sindell-rules-text\">sindell text</span><span> ",
			"teklar text": "<span class=\"shaimus teklar-rules-text\">teklar text</span><span> ",
			"no-planet text": "<span class=\"shaimus no-planet-rules-text\">no-planet text</span><span> "
		}
	},
	"set": {
		"fields": [
			"set-name",
			"set-code"
		],
		"name_field": "set-name"
	},
	"consts": {
		"check-acti": "<if .type = activator then",
		"check-comb": "<if .type = combiner then",
		"end": "end>",
		"acti-class": "card-text-!acti-lines",
		"type-class": "card-text-{type}",
		"acti": "acti-{lines}",
		"light": "shaimus-light",
		"bold": "shaimus",
		"type-pos": "!{type}-pos",
		"Activator-pos": "!act-pos-{lines}",
		"act-pos-1": "442;35;76;338",
		"act-pos-2": "454.5;35;65;338",
		"act-pos-3": "470;35;51;338",
		"Resource-pos": "!standard-pos",
		"Permanent-Resource-pos": "!standard-pos",
		"Attachment-pos": "!standard-pos",
		"Creature-pos": "<eval 520 - (15 * {textbox-lines}) end>;37;<eval 15 * {textbox-lines} end>;334",
		"Planet-pos": "!standard-pos",
		"Combiner-pos": "<eval 520 - (15 * {textbox-lines}) end>;37;<eval 15 * {textbox-lines} end>;334",
		"standard-pos": "425;40;!textbox-size",
		"textbox-size": "96;332",
		"art-pos": "!{type}-art",
		"Combiner-art": "!combiner-{side}-art",
		"check-left": "<if .side = left then",
		"check-right": "<if .side = right then",
		"combiner-Left-art": "166;42;<eval 345 - 15 * {textbox-lines} end>;339",
		"combiner-Right-art": "166;28;<eval 345 - 15 * {textbox-lines} end>;341",
		"Creature-art": "156;40;<eval 357 - 15 * {textbox-lines} end>;328",
		"Resource-art": "!standard-art",
		"standard-art": "81;41;325;327",
		"Permanent-Resource-art": "!standard-art",
		"Attachment-art": "!standard-art",
		"Planet-art": "!standard-art",
		"Activator-art": "!standard-art",
		"star-left": "<if .stars = 10 then 25 else 35 end>",
		"star-width": "<if .stars = 10 then 360 else none end>",
		"attachment-img": "<if .moon = true then moon else attachment end>",
		"font-diff": "{name-font-size} - 27",
		"name-top": "<eval (({name-font-size} - 27) * -1) + 34 end>",
		"name-backing-default": "!{type}-backing",
		"Creature-backing": "![planet]-backing",
		"Combiner-backing": "![planet]-backing",
		"Baro-backing": "#D0C0B1",
		"baro-backing": "#D0C0B1",
		"Gaios-backing": "#D5F0AD",
		"No-planet-backing": "#C8C8C8",
		"Palicium-backing": "#D3E8FB",
		"Rokah-backing": "#FEEFD0",
		"Sheos-backing": "#FBE5C0",
		"Sindell-backing": "#D7BFF1",
		"Sindian-backing": "#E0E49A",
		"Teklar-backing": "#D7FFF7",
		"Resource-backing": "#ECD9AF",
		"Permanent-Resource-backing": "#ECD9AF",
		"Attachment-backing": "#E7BBBC",
		"Activator-backing": "#C1B2C7",
		"Planet-backing": "#CACACA",
		"name-backing-left": "38",
		"name-backing-width": "333",
		"name-backing-top": "33",
		"name-backing-height": "37",
		"type-bg": "!{type}-bg",
		"Creature-bg": "#346792",
		"Resource-bg": "#BA9425",
		"Permanent-Resource-bg": "#BA9425",
		"Attachment-bg": "#AE1915",
		"Planet-bg": "#3E3838",
		"Combiner-bg": "#2A6A45",
		"Activator-bg": "#543465",
		"1-cond-pos": "420;34.5;15;377.7",
		"2-cond-pos": "420;34.5;30;377.7",
		"3-cond-pos": "420;34.5;45;377.7",
		"type-text-content": "<if .type = creature then {stars} else {type} end>",
		"bottom-font-color": "<if activatorattachmentcombinerplanetcreature $ .type then white else black end>",
		"ridrare-h": "<eval hexToHsl(\"[ridrare-color]\")[0] end>",
		"ridrare-s": "<eval hexToHsl(\"[ridrare-color]\")[1] end>",
		"ridrare-v": "<eval hexToHsl(\"[ridrare-color]\")[2] end>"
	},
	"types": {
		"Creature": {
			"fields": [
				"name",
				"name-backing",
				"name-font-size",
				"name-font-squish",
				"border-color",
				"border",
				"type-text",
				"rarity-text",
				"set-text",
				"rarity",
				"planet",
				"textbox-lines",
				"text",
				"power",
				"health",
				"ridrare",
				"ridrare-color",
				"stars"
			],
			"url": "border.jpg"
		},
		"Combiner": {
			"fields": [
				"name",
				"name-backing",
				"name-font-size",
				"name-font-squish",
				"border-color",
				"border",
				"type-text",
				"rarity-text",
				"set-text",
				"rarity",
				"other-half",
				"planet",
				"text",
				"textbox-lines",
				"power",
				"health",
				"side",
				"ridrare",
				"ridrare-color"
			],
			"url": "border.jpg"
		},
		"Resource": {
			"fields": [
				"name",
				"name-backing",
				"name-font-size",
				"name-font-squish",
				"border-color",
				"border",
				"type-text",
				"rarity-text",
				"set-text",
				"rarity",
				"text",
				"ridrare",
				"ridrare-color"
			],
			"url": "border.jpg"
		},
		"Attachment": {
			"fields": [
				"name",
				"name-backing",
				"name-font-size",
				"name-font-squish",
				"border-color",
				"border",
				"type-text",
				"rarity-text",
				"set-text",
				"rarity",
				"text",
				"ridrare",
				"ridrare-color",
				"moon"
			],
			"url": "border.jpg"
		},
		"Planet": {
			"fields": [
				"name",
				"name-backing",
				"name-font-size",
				"name-font-squish",
				"border-color",
				"border",
				"type-text",
				"rarity-text",
				"set-text",
				"rarity",
				"text",
				"ridrare",
				"ridrare-color"
			],
			"url": "border.jpg"
		},
		"Permanent-Resource": {
			"fields": [
				"name",
				"name-backing",
				"name-font-size",
				"name-font-squish",
				"border-color",
				"border",
				"type-text",
				"rarity-text",
				"set-text",
				"rarity",
				"text",
				"ridrare",
				"ridrare-color"
			],
			"url": "border.jpg"
		},
		"Activator": {
			"fields": [
				"name",
				"name-backing",
				"name-font-size",
				"name-font-squish",
				"border-color",
				"border",
				"type-text",
				"rarity-text",
				"set-text",
				"rarity",
				"text",
				"condition",
				"lines",
				"ridrare",
				"ridrare-color"
			],
			"url": "border.jpg"
		}
	},
	"fields": {
		"ridrare": {
			"type": "overlay",
			"view": "none",
			"loc": "fields",
			"label": "Ridiculously rare overlay",
			"url": "ridiculrare.png",
			"default": false,
			"img": {
				"loc": "card-fields",
				"style": {
					"display": "<if .rarity $ ridiculously then block else none end>",
					"z-index": "-3",
					"position": "absolute",
					"filter": "hue-rotate(!ridrare-hdeg) saturate(!ridrare-s) brightness(!ridrare-v)"
				},
				"position": "23;29;516;356"
			}
		},
		"ridrare-color": {
			"type": "infix",
			"view": "<if .rarity $ ridiculously then input else none end>",
			"input_type": "color",
			"loc": "fields",
			"label": "Ridrare color",
			"default": "#000000"
		},
		"stars": {
			"type": "overlay",
			"view": "input",
			"input_type": "number",
			"loc": "fields",
			"label": "Creature's stars",
			"default": "1",
			"url": "/stars/[stars]star.png",
			"img": {
				"loc": "card-fields",
				"width": "!star-width",
				"height": "35",
				"top": "120",
				"left": "!star-left"
			}
		},
		"name": {
			"type": "card",
			"view": "card-text",
			"loc": "card-fields",
			"default": "Card Name",
			"position": "!name-top;43;30;410",
			"font": {
				"size": "{name-font-size}",
				"family": "!light",
				"color": "black"
			},
			"style": {
				"letter-spacing": "-1px",
				"transform": "scaleX(<eval 1 - ([name-font-squish] / 10) end>)",
				"transform-origin": "left"
			}
		},
		"other-half": {
			"type": "overlay",
			"view": "card-text",
			"loc": "card-fields",
			"default": "+ Other Half",
			"position": "124;43;28;410",
			"url": "nothing.png",
			"font": {
				"family": "!light",
				"size": "23",
				"color": "black",
				"letter-spacing": "-1px"
			},
			"img": {
				"position": "126;38;28;333",
				"style": {
					"background-color": "[name-backing]",
					"border": "2px solid {border-color}",
					"border-radius": "1px",
					"z-index": "-1"
				},
				"loc": "card-fields"
			}
		},
		"planet": {
			"type": "overlay",
			"view": "dropdown",
			"loc": "fields",
			"label": "Planet",
			"options": [
				"baro",
				"gaios",
				"palicium",
				"sindell",
				"teklar",
				"rokah",
				"sindian",
				"sheos",
				"no-planet"
			],
			"default": "baro",
			"url": "creatures/[planet]planet.png",
			"img": {
				"top": "82",
				"left": "162",
				"width": "85",
				"height": "28",
				"loc": "card-fields",
				"style": {
					"border": "2px solid {border-color}",
					"border-radius": "1px"
				}
			}
		},
		"text": {
			"type": "card",
			"view": "<if .textbox-lines = 0 then none else card-text end>",
			"loc": "card-fields",
			"class": "!type-pos",
			"position": "!type-pos",
			"font": {
				"family": "!light",
				"size": "15",
				"line-height": "14",
				"color": "black"
			},
			"style": {
				"border-radius": "1px",
				"border": "2px solid [border-color]",
				"background-color": "[name-backing]",
				"font-stretch": "50%",
				"letter-spacing": "-0.8px"
			},
			"default": "Card text goes here"
		},
		"power": {
			"type": "overlay",
			"view": "card-text",
			"loc": "card-fields",
			"default": "999",
			"style": {
				"text-align": "center",
				"letter-spacing": "-2px"
			},
			"font": {
				"family": "!bold",
				"size": "28",
				"color": "black"
			},
			"position": "76;108;40;48",
			"url": "power.png",
			"img": {
				"left": "40",
				"top": "78",
				"height": "34",
				"width": "117",
				"loc": "card-fields",
				"style": {
					"border": "2px solid {border-color}",
					"border-radius": "1px",
					"background-color": "[name-backing]"
				}
			}
		},
		"health": {
			"type": "overlay",
			"view": "card-text",
			"loc": "card-fields",
			"default": "999",
			"style": {
				"text-align": "center",
				"letter-spacing": "-2px"
			},
			"font": {
				"family": "!bold",
				"size": "28",
				"color": "black"
			},
			"position": "76;322.5;40;48",
			"url": "health.png",
			"img": {
				"left": "253",
				"top": "78",
				"height": "34",
				"width": "117",
				"loc": "card-fields",
				"style": {
					"border": "2px solid {border-color}",
					"border-radius": "1px",
					"background-color": "[name-backing]"
				}
			}
		},
		"side": {
			"type": "infix",
			"view": "dropdown",
			"loc": "fields",
			"label": "Combiner's half",
			"options": [
				"left",
				"right"
			],
			"default": "left"
		},
		"condition": {
			"type": "card",
			"view": "card-text",
			"loc": "card-fields",
			"class": "!bold acti-text-{lines}-lines acti-text",
			"default": "Your condition...",
			"position": "!{lines}-cond-pos",
			"style": {
				"border": "2px solid #c1b3c8",
				"letter-spacing": "-0.5px",
				"transform": "scaleX(0.9)",
				"transform-origin": "left",
				"background-color": "#543465"
			}
		},
		"lines": {
			"type": "infix",
			"view": "input",
			"input_type": "number",
			"loc": "fields",
			"label": "Number of lines in condition",
			"options": [
				"1",
				"2",
				"3"
			],
			"default": "1"
		},
		"moon": {
			"type": "infix",
			"view": "checkbox",
			"loc": "fields",
			"label": "Is this a moon?",
			"default": "true"
		},
		"name-font-size": {
			"type": "infix",
			"view": "input",
			"input_type": "number",
			"loc": "fields",
			"label": "Name font size (default: 27)",
			"default": "27"
		},
		"name-font-squish": {
			"type": "infix",
			"view": "input",
			"input_type": "number",
			"loc": "fields",
			"label": "Name font squish (default: 0)",
			"default": "0"
		},
		"border-color": {
			"type": "card",
			"view": "input",
			"input_type": "color",
			"loc": "fields",
			"label": "Border Color",
			"default": "black"
		},
		"border": {
			"type": "overlay",
			"view": "none",
			"loc": "fields",
			"url": "nothing.png",
			"img": {
				"loc": "card-fields",
				"position": "21;26;516;356",
				"style": {
					"border": "3px solid {border-color}",
					"border-radius": "2px",
					"background-color": "!type-bg",
					"z-index": "-10",
					"position": "absolute"
				}
			}
		},
		"name-backing": {
			"type": "overlay",
			"view": "input",
			"input_type": "color",
			"label": "Background Color",
			"default": "!name-backing-default",
			"loc": "fields",
			"url": "nothing.png",
			"img": {
				"loc": "card-fields",
				"width": "!name-backing-width",
				"height": "!name-backing-height",
				"top": "!name-backing-top",
				"left": "!name-backing-left",
				"style": {
					"background": "[name-backing]",
					"z-index": "-1",
					"border": "2px solid [border-color]",
					"border-radius": "1px"
				}
			}
		},
		"set-text": {
			"type": "card",
			"view": "<if .set-code = null then none else card-text end>",
			"loc": "card-fields",
			"position": "520;29;20;356",
			"text": "[set-code]: <eval i = set.cards.indexOf(current_card); \"0\".repeat(Math.abs(3 - i.toString().length)) + i; end>",
			"font": {
				"family": "!light",
				"color": "!bottom-font-color",
				"size": "13"
			},
			"style": {
				"text-align": "center",
				"letter-spacing": "-1px",
				"background-color": "!type-bg",
				"z-index": "-1"
			}
		},
		"type-text": {
			"type": "card",
			"view": "card-text",
			"loc": "card-fields",
			"position": "520;35;10;100",
			"text": "!type-text-content",
			"font": {
				"family": "!light",
				"size": "13"
			},
			"style": {
				"letter-spacing": "-1px",
				"color": "!bottom-font-color"
			}
		},
		"rarity": {
			"type": "infix",
			"view": "dropdown",
			"loc": "fields",
			"options": [
				"Common",
				"Rare",
				"Really Rare",
				"Ridiculously Rare"
			],
			"default": "Common",
			"label": "Rarity"
		},
		"rarity-text": {
			"type": "card",
			"view": "card-text",
			"loc": "card-fields",
			"position": "520;225;10;150",
			"text": "{rarity}",
			"font": {
				"family": "!light",
				"color": "!bottom-font-color",
				"size": "13"
			},
			"style": {
				"text-align": "right",
				"letter-spacing": "-1px"
			}
		},
		"textbox-lines": {
			"type": "infix",
			"view": "input",
			"input_type": "number",
			"loc": "fields",
			"default": "4",
			"label": "Number of lines"
		},
		"set-name": {
			"type": "infix",
			"view": "input",
			"input_type": "text",
			"loc": "set-fields",
			"label": "Set name"
		},
		"set-code": {
			"type": "infix",
			"view": "input",
			"input_type": "text",
			"loc": "set-fields",
			"label": "Set code"
		}
	},
	"art": {
		"position": "!art-pos",
		"class": "!art-pos",
		"style": {
			"border": "solid {border-color}",
			"border-width": "3px",
			"border-radius": "2px",
			"z-index": "3"
		}
	}
}